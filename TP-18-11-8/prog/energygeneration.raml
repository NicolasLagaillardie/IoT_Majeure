/EnergyGenerationResURI:
  description: |
    This resource describes the attributes associated with energy generation
    energygenerated is a number that provides the energy generated in Watt-hour(Wh).
  displayName: Energy Generation
  is: [ interface ] # valid for all methods

  get:
    description: |
      Retrieves the current energy generation.
    responses:
      200:
        body:
          application/json:
            schema: EnergyGeneration
            example: |
              {
                "rt":     ["oic.r.energy.generation"],
                "id":     "unique_example_id",
                "energygenerated": 3000.00
              }
